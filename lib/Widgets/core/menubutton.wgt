Class		Menubutton
Lib		core

Icon		icon_menubutton.gif
DefaultOptions	-text menu
DoubleClickCmd	vTcl:edit_target_menu
InsertCmd	vTcl:widget:menubutton:inscmd
TreeLabel	@vTcl:core:get_widget_tree_label

proc vTcl:widget:menubutton:inscmd {target} {
    menu $target.m
    $target conf -menu $target.m
    vTcl:widget:register_widget $target.m
}
